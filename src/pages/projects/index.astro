---
import Page from "@/layouts/Page.astro";
import { getParsedCollection } from "@/lib/helpers";

const projects = await getParsedCollection("projects");
---

<Page title={`NicoToff | Projects`}>
  {
    projects.map(({ frontmatter, Content }) => (
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-2">{frontmatter.title}</h2>
        <p class="text-gray-500 mb-4">{frontmatter.description}</p>
        <Content />
      </div>
    ))
  }
</Page>
